@model IEnumerable<Demo.Models.Cart>;
@{
    ViewData["Title"] = "Index";
}
@if (TempData["yes"] != null)
{
    <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <strong>Title!</strong> @TempData["yes"]
    </div>
}

<!--shopping cart area start -->
<div class="shopping_cart_area mt-70">
    <div class="container">
        <form action="Order"method="post">
            <div class="row">
                <div class="col-12">
                    <div class="table_desc">
                        <div class="cart_page">
                            <table>
                                <thead>
                                    <tr>
                                        <th class="product_remove">Xóa</th>
                                        <th class="product_thumb">Ảnh</th>
                                        <th class="product_name">Sản phẩm</th>
                                        <th class="product-price">Giá</th>
                                        <th class="product_quantity">Số lượng</th>
                                        <th class="product_total">Tổng</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var cart in Model)
                                    {
                                        <tr>
                                            <td class="product_remove"><a asp-action="Remove" asp-route-id="@cart.Id">><i class="fa fa-trash-o"></i></a>

                                        </td>
                                            <td class="product_thumb"><a href="#"><img src="@cart.Image" alt="@cart.Name" width="40" /></a></td>
                                            <td class="product_name"><a href="#">@cart.Name</a></td>
                                            <td class="product-price">@cart.Price</td>
                                            <td class="product_quantity"><label>@cart.Quantity</label> <input min="1" max="100" value="1" type="number"></td>
                                            <td class="product_total">£130.00</td>


                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                        <div class="cart_submit">
                            <button type="submit">Chỉnh sửa</button>
                        </div>
                    </div>
                </div>
            </div>
            <!--coupon code area start-->
            <div class="coupon_area">
                <div class="row">
                   
                    <div class="col-lg-6 col-md-6">
                        <div class="coupon_code right">
                            <h3>Cart Totals</h3>
                            <div class="coupon_inner">
                                <div class="cart_subtotal">
                                    <p>Subtotal</p>
                                    <p class="cart_amount">£215.00</p>
                                </div>
                                <div class="cart_subtotal ">
                                    <p>Shipping</p>
                                    <p class="cart_amount"><span>Flat Rate:</span> £255.00</p>
                                </div>
                                <a href="#">Calculate shipping</a>

                                <div class="cart_subtotal">
                                    <p>Total</p>
                                    <p class="cart_amount">£215.00</p>
                                </div>
                                <div class="checkout_btn">
                                    <a asp-controller="Cart" asp-action="Checkout">Đặt Hàng</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--coupon code area end-->
        </form>
    </div>
</div>
<!--shopping cart area end -->

